{
  "realm": "passkeysample",
  "enabled": true,
  "clients": [
    {
      "clientId": "passkeysample-api",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "api-client-secret-change-in-production",
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "publicClient": false,
      "protocol": "openid-connect",
      "attributes": {
        "token.exchange": "true",
        "oauth2.device.authorization.grant.enabled": "false"
      },
      "authorizationServicesEnabled": false,
      "defaultClientScopes": [
        "web-origins",
        "role_list",
        "profile",
        "roles",
        "email"
      ],
      "optionalClientScopes": [
        "offline_access",
        "microprofile-jwt"
      ],
      "protocolMappers": [
        {
          "name": "username",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-property-mapper",
          "config": {
            "user.attribute": "username",
            "claim.name": "preferred_username",
            "jsonType.label": "String",
            "id.token.claim": "true",
            "access.token.claim": "true"
          }
        }
      ]
    }
  ],
  "users": [
    {
      "username": "admin",
      "enabled": true,
      "email": "admin@passkeysample.local",
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": false
        }
      ],
      "realmRoles": ["admin"]
    },
    {
      "username": "user1",
      "enabled": true,
      "email": "user1@passkeysample.local",
      "credentials": [
        {
          "type": "password",
          "value": "user123",
          "temporary": false
        }
      ]
    }
  ]
}
